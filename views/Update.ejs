<div>
  <%  for(var i = 0 ; i < data.length ; i ++ ){ %>
    <form action="/Update" method="post" enctype="application/x-www-form-urlencoded">
      <input name="id" type="hidden" value="<%= data[i]._id%>">
      <input placeholder="Mã ô tô " style="width: 300px ; height: 40px ; border-radius: 10px ; margin: 15px " name="maOto" value="<%= data[i].maOto%>"> <br>
      <input placeholder="Nhãn hiệu " style="width: 300px ; height: 40px ; border-radius: 10px ; margin: 15px " name="nhanHieu" value="<%= data[i].nhanHieu%>" > <br>
      <input placeholder="Năm sản xuất  " style="width: 300px ; height: 40px ; border-radius: 10px ; margin: 15px " name="namSanXuat" value="<%= data[i].namSanXuat%>"> <br>
      <input placeholder="Giá gốc" style="width: 300px ; height: 40px ; border-radius: 10px ; margin: 15px " name="giaGoc" value="<%= data[i].giaGoc%>" > <br>
      <input placeholder="Gía Bán" style="width: 300px ; height: 40px ; border-radius: 10px ; margin: 15px " name="giaBan" value="<%= data[i].giaBan%>"> <br>
      <input placeholder="Ảnh Đại diện" style="width: 300px ; height: 40px ; border-radius: 10px ; margin: 15px " name="anhDaiDien" value="<%= data[i].anhDaiDien%>" > <br>
      <button type="submit" style="width: 150px;margin-left: 15px;border-radius: 10px;margin-top: 10px">Sửa</button>
    </form>
  <% } %>
</div>


